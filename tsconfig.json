{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "ES2016",
      "moduleResolution": "node",
      "isolatedModules": false,
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "./build",
      "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }